<% if @post.errors.any? %>
	<div id="error_explanation">
		<div class="alert alert-error">
			The form contains <%= pluralize(@post.errors.count, "error") %>.	<!--pluralize takes an integer argument and then returns the number with a properly pluralized version of its second -->argument.
		</div>
		
		<ul>
		<% @post.errors.full_messages.each do |msg| %>
			<li>* <%= msg %></li>
		<% end %>
		</ul>
	
	</div>
<% end %>